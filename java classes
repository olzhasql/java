1.java classes

public class Person {
    private String name;
    private int age;

    public Person(String name, int age) {
        this.name = name;
        this.age = age;
    }

    public void introduce() {
        System.out.println("Hello, my name is " + name + " and I am " + age + " years old.");
    }

    public static void main(String[] args) {
        Person person = new Person("Alice", 25);
        person.introduce();
    }
}


2.Java atributes

public class Person {
    private String name;
    private int age;

    public Person(String name, int age) {
        this.name = name;
        this.age = age;
    }

    public void introduce() {
        System.out.println(name + ", " + age + " years old");
    }

    public static void main(String[] args) {
        new Person("Alice", 25).introduce();
    }
}




3.java class methods

public class Person {
    private String name; int age;
    public Person(String n, int a) { name = n; age = a; }
    public void birthday() { System.out.println("Happy Birthday, " + name + "! Now " + (++age)); }
    public static void main(String[] args) { new Person("Alice", 25).birthday(); }
}

4.java constructions

public class Main {
    public static void main(String[] args) {
        int x = 10;
        System.out.println(x > 5 ? "Big" : "Small");
        for (int i = 0; i < 3; i++) System.out.println(i);
        if (x % 2 == 0) System.out.println("Even");
    }
}

5.java modifiers

final class Main {
    public static void main(String[] args) {
        final int x = 10;
        System.out.println(x > 5 ? "Big" : "Small");
        for (int i = 0; i < 3; i++) System.out.println(i);
        if (x % 2 == 0) System.out.println("Even");
    }
}

